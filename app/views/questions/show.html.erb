
<div class="container">
    <div class="lead well">
        <div class="media">
            <div class="media-left">
                <a href="#">
                    <img class="media-object" src="<%= @question.gravatar %>"></img>
                </a>
            </div>

            <div class="media-body">
                <h4 class="media-heading"> <%= @question.email %> asked: </h4>
                <%= @question.body %>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
            <div>
                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#new_answer_modal">Submit New Answer</button>
            </div>

            <% @answers.each do |answer| %>
                <div class="media">
                    <div class="media-left">
                        <a href="#">
                            <img class="media-object" src="<%= answer.gravatar %>" </img>
                        </a>
                    </div>

                    <div class="media-body">
                        <h4 class="media-heading"><%= answer.email %> asked: </h4>
                        <div> <%= time_ago_in_words answer.created_at %> </div>
                        <%= answer.body %>
                    </div>
                </div>
            <% end %>


            <%= render 'home/new_answer_form' %>

        </div>
    </div>

</div> 